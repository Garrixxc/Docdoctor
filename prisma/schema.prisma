generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String        @id @default(cuid())
  name              String?
  email             String        @unique
  emailVerified     DateTime?
  image             String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  accounts          Account[]
  uploadedDocuments Document[]    @relation("UploadedBy")
  exports           Export[]      @relation("ExportedBy")
  memberships       Membership[]
  reviewEvents      ReviewEvent[]
  triggeredRuns     Run[]         @relation("TriggeredBy")
  sessions          Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Workspace {
  id           String        @id @default(cuid())
  name         String
  slug         String        @unique
  settings     Json?         @default("{}")
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  tier         WorkspaceTier @default(FREE)
  memberships  Membership[]
  projects     Project[]
  usageRecords UsageRecord[]

  @@index([slug])
  @@map("workspaces")
}

model UsageRecord {
  id          String    @id @default(cuid())
  workspaceId String
  periodStart DateTime
  pagesUsed   Int       @default(0)
  runsUsed    Int       @default(0)
  costAccrued Float     @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, periodStart])
  @@index([workspaceId])
  @@map("usage_records")
}

model Membership {
  id          String         @id @default(cuid())
  userId      String
  workspaceId String
  role        MembershipRole @default(MEMBER)
  createdAt   DateTime       @default(now())
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace   Workspace      @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([userId, workspaceId])
  @@index([workspaceId])
  @@map("memberships")
}

model Template {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique
  version   String    @default("1.0")
  category  String
  config    Json
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[]

  @@index([slug])
  @@index([category])
  @@map("templates")
}

model Project {
  id                 String        @id @default(cuid())
  workspaceId        String
  templateId         String
  name               String
  slug               String
  requirements       Json?         @default("{}")
  extractionSettings Json?         @default("{}")
  apiKeyMode         ApiKeyMode    @default(PLATFORM)
  encryptedApiKey    String?
  status             ProjectStatus @default(ACTIVE)
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  documents          Document[]
  exports            Export[]
  template           Template      @relation(fields: [templateId], references: [id])
  workspace          Workspace     @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  runs               Run[]

  @@unique([workspaceId, slug])
  @@index([workspaceId])
  @@index([templateId])
  @@map("projects")
}

model Document {
  id              String             @id @default(cuid())
  projectId       String
  name            String
  fileUrl         String
  fileType        String
  fileSize        Int
  uploadedBy      String
  status          DocumentStatus     @default(UPLOADED)
  metadata        Json?              @default("{}")
  createdAt       DateTime           @default(now())
  docTypeDetected String?
  docTypeReason   String?
  docTypeScore    Float?
  skipReason      String?
  project         Project            @relation(fields: [projectId], references: [id], onDelete: Cascade)
  uploader        User               @relation("UploadedBy", fields: [uploadedBy], references: [id])
  records         ExtractionRecord[]

  @@index([projectId])
  @@map("documents")
}

model Run {
  id               String             @id @default(cuid())
  projectId        String
  triggeredBy      String
  status           RunStatus          @default(PENDING)
  settingsSnapshot Json
  templateSnapshot Json
  startedAt        DateTime?
  finishedAt       DateTime?
  costEstimate     Float?
  errorMessage     String?
  progress         Json?              @default("{}")
  createdAt        DateTime           @default(now())
  processedCount   Int                @default(0)
  skippedCount     Int                @default(0)
  exports          Export[]
  records          ExtractionRecord[]
  steps            RunStep[]
  project          Project            @relation(fields: [projectId], references: [id], onDelete: Cascade)
  triggerer        User               @relation("TriggeredBy", fields: [triggeredBy], references: [id])

  @@index([projectId])
  @@index([status])
  @@map("runs")
}

model RunStep {
  id         String     @id @default(cuid())
  runId      String
  stepName   String
  status     StepStatus @default(PENDING)
  input      Json?
  output     Json?
  error      String?
  startedAt  DateTime?
  finishedAt DateTime?
  retryCount Int        @default(0)
  run        Run        @relation(fields: [runId], references: [id], onDelete: Cascade)

  @@index([runId])
  @@map("run_steps")
}

model ExtractionRecord {
  id              String            @id @default(cuid())
  runId           String
  documentId      String
  overallStatus   RecordStatus      @default(PENDING_REVIEW)
  metadata        Json?             @default("{}")
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  failedRulesJson Json?
  recordStatus    RecordStatus      @default(NEEDS_REVIEW)
  fields          ExtractionField[]
  document        Document          @relation(fields: [documentId], references: [id], onDelete: Cascade)
  run             Run               @relation(fields: [runId], references: [id], onDelete: Cascade)

  @@index([runId])
  @@index([documentId])
  @@index([overallStatus])
  @@map("extraction_records")
}

model ExtractionField {
  id                   String           @id @default(cuid())
  recordId             String
  fieldName            String
  fieldType            String
  extractedValue       Json?
  confidence           Decimal?         @db.Decimal(5, 4)
  validationStatus     ValidationStatus @default(PASS)
  validationMessages   Json?
  isApproved           Boolean          @default(false)
  approvedBy           String?
  approvedAt           DateTime?
  createdAt            DateTime         @default(now())
  updatedAt            DateTime         @updatedAt
  evidenceJson         Json?
  fieldStatus          FieldStatus      @default(NEEDS_REVIEW)
  validationErrorsJson Json?
  record               ExtractionRecord @relation(fields: [recordId], references: [id], onDelete: Cascade)
  reviewEvents         ReviewEvent[]

  @@index([recordId])
  @@index([fieldName])
  @@index([isApproved])
  @@map("extraction_fields")
}

model ReviewEvent {
  id        String          @id @default(cuid())
  fieldId   String
  userId    String
  action    ReviewAction
  oldValue  Json?
  newValue  Json?
  comment   String?
  createdAt DateTime        @default(now())
  field     ExtractionField @relation(fields: [fieldId], references: [id], onDelete: Cascade)
  user      User            @relation(fields: [userId], references: [id])

  @@index([fieldId])
  @@index([userId])
  @@map("review_events")
}

model Export {
  id          String       @id @default(cuid())
  projectId   String
  runId       String?
  exportedBy  String
  format      ExportFormat @default(CSV)
  status      ExportStatus @default(PENDING)
  fileUrl     String?
  recordCount Int?
  createdAt   DateTime     @default(now())
  exporter    User         @relation("ExportedBy", fields: [exportedBy], references: [id])
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  run         Run?         @relation(fields: [runId], references: [id])

  @@index([projectId])
  @@index([runId])
  @@map("exports")
}

enum WorkspaceTier {
  FREE
  PRO
}

enum MembershipRole {
  OWNER
  ADMIN
  MEMBER
  REVIEWER
}

enum ProjectStatus {
  ACTIVE
  ARCHIVED
}

enum ApiKeyMode {
  PLATFORM
  WORKSPACE
  PROJECT
}

enum DocumentStatus {
  UPLOADED
  PROCESSING
  COMPLETED
  FAILED
}

enum RunStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum StepStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

enum RecordStatus {
  PENDING_REVIEW
  APPROVED
  REJECTED
  COMPLIANT
  NON_COMPLIANT
  NEEDS_REVIEW
  SKIPPED
}

enum ValidationStatus {
  PASS
  FAIL
  WARNING
}

enum FieldStatus {
  PASS
  FAIL_VALIDATION
  MISSING
  NEEDS_REVIEW
  SKIPPED_WRONG_DOC_TYPE
}

enum ReviewAction {
  EDIT
  APPROVE
  REJECT
}

enum ExportFormat {
  CSV
  JSON
}

enum ExportStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}
